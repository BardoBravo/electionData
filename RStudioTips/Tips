Final command
> leaflet(slmap) %>%
+     addProviderTiles("CartoDB.Positron") %>%
+     addPolygons(stroke=TRUE,
+                 weight=1,
+                 smoothFactor = 0.2, 
+                 fillOpacity = .75,
+                 popup=slpopup,
+                 color=~vanazziPalette(slmap@data$vanazziPct),
+                 group="vanazzi"
+                 ) %>%
+     addLegend(position="bottomleft", colors=c("#984ea3", "#e41a1c"), labels=c("Ary Vanazzi","Moacir")) %>%
+     addPolygons(stroke=TRUE,
+                 weight=1,
+                 smoothFactor = 0.2, 
+                 fillOpacity = .75,
+                 popup=slpopup,
+                 color=~moacirPalette(slmap@data$moacirPct),
+                 group="moacir"
+     ) %>%
+     addPolygons(stroke=TRUE,
+                 weight=1,
+                 smoothFactor = 0.2, 
+                 fillOpacity = .75,
+                 popup=slpopup,
+                 color=~azaraoPalette(slmap@data$azaraoPct),
+                 group="azarao"
+     ) %>%
+     addLayersControl(
+         baseGroups = c("vanazzi", "moacir", "azarao"),
+         position= "bottomleft",
+         options = layersControlOptions(collapsed=FALSE)
+     )

